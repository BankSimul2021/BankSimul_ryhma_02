{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 12
    },
    "rules": {
        "no-tabs":"warn",
        "semi": ["warn", "always", {
            "omitLastInOneLineBlock": true
        }]
    },
    "globals": {
        "Buffer": "readonly",
        "process": "readonly",
        "__dirname": "readonly"
    }
}
